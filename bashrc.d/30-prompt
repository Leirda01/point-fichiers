function prompt {
  if [[ $COLUMNS -ge 90 ]]; then
    PS1='\[$reset\][\[$cyan\]\u@\h \[$green\]\W\[$white\]]\[$yellow\]$ \[$reset\]'
  else
    PS1='\[$reset\]\[$yellow\]$ \[$reset\]'
  fi
}
PROMPT_COMMAND=${PROMPT_COMMAND:+$PROMPT_COMMAND; }'printf "\033]0;%s\007" "${PWD}"; prompt'

# vim: filetype=bash
