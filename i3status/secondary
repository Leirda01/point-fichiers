# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        color_good = "#00ff80"
        color_bad  = "#ff0080"
        color_degraded = "#8000ff"
        interval = 1
}

order += "read_file motd"
order += "wireless _first_"
order += "ethernet _first_"
order += "ipv6"
order += "tztime local"
order += "volume master"

volume master {
        format = "♪ %volume"
        format_muted = ""
        mixer = "Master"
        mixer_idx = 0
}

wireless _first_ {
        format_up = "wifi %essid (%ip)"
        format_down = ""
}

ethernet _first_ {
        format_up = "%speed %ip"
        format_down = ""
}

ipv6 {
        format_down = ""
}

tztime local {
        format = "%A %d %B %T"
}

read_file motd {
        path = "/home/leirda/.config/i3status/motd"
}
