# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        color_good = "#00ff80"
        color_bad  = "#ff0080"
        color_degraded = "#8000ff"
        interval = 1
}

order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "volume master"
order += "disk /home"
order += "memory"
order += "battery all"
order += "tztime local"

volume master {
        format = "♪ %volume"
        format_muted = ""
        mixer = "Master"
        mixer_idx = 0
}

wireless _first_ {
        format_up = "%essid %bitrate %frequency"
        format_down = ""
}

ethernet _first_ {
        format_up = "%ip%speed"
        format_down = ""
}

ipv6 {
        format_down = ""
}

battery all {
        format = "%percentage %status"
        status_chr  = "↑"
        status_bat  = "↓" 
        status_unk  = "?"
        status_full = "~"
}

disk "/home" {
        format = "%avail"
}

memory {
        format = "%used/%total"
        threshold_degraded = "1G"
}

tztime local {
        format = "%A %d %B %T"
}
