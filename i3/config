# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4
set $refresh_i3status killall -SIGUSR1 i3status

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
font pango:DejaVu Sans Mono 9.5

exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock -ubc 000000 --nofork
exec --no-startup-id redshift # Blue light filter

# Use pactl to adjust volume in PulseAudio.
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +1%\
&& $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -1%\
&& $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle\
&& $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle\
&& $refresh_i3status

focus_follows_mouse no

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+B kill

# start dmenu (a program launcher)
# Please use colors from Xresources another day.
bindsym $mod+i exec dmenu_run -nb '#000000' -sb '#000000' -nf '#444444' -sf '#ffffff'

# change focus
bindsym $mod+c focus left
bindsym $mod+t focus down
bindsym $mod+s focus up
bindsym $mod+r focus right

# move focused window
bindsym $mod+Shift+C move left
bindsym $mod+Shift+T move down
bindsym $mod+Shift+S move up
bindsym $mod+Shift+R move right

# Horizontal or Vertical split
bindsym $mod+rightsinglequotemark split h
bindsym $mod+period split v

# enter fullscreen mode for the focused container
bindsym $mod+e fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+u layout stacking
bindsym $mod+eacute layout tabbed
bindsym $mod+p layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# default mode for i3 is tabbed
workspace_layout tabbed

# Don’t bother me marking windows as urgent
focus_on_window_activation none

title_align center

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

bindsym $mod+quotedbl        workspace $ws1
bindsym $mod+guillemotleft   workspace $ws2
bindsym $mod+guillemotright  workspace $ws3
bindsym $mod+parenleft       workspace $ws4
bindsym $mod+parenright      workspace $ws5
bindsym $mod+at              workspace $ws6
bindsym $mod+plus            workspace $ws7
bindsym $mod+minus           workspace $ws8
bindsym $mod+slash           workspace $ws9
bindsym $mod+asterisk        workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# reload the configuration file
bindsym $mod+Shift+X reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+O restart

bindsym $mod+BackSpace       exec ([[ $(echo -e "yes\nno" | dmenu -p "logout?") == yes ]] && i3-msg exit)
bindsym $mod+Shift+BackSpace exec ([[ $(echo -e "yes\nno" | dmenu -p "shutdown?") == yes ]] && shutdown now)
bindsym $mod+mod1+BackSpace  exec ([[ $(echo -e "yes\nno" | dmenu -p "reboot?") == yes ]] && reboot)

mode "resize" {
        bindsym c resize shrink width 10 px or 10 ppt
        bindsym t resize grow   height 10 px or 10 ppt
        bindsym s resize shrink height 10 px or 10 ppt
        bindsym r resize grow   width 10 px or 10 ppt

        bindsym Shift+C move left
        bindsym Shift+T move down
        bindsym Shift+S move up
        bindsym Shift+R move right

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+o mode "default"
}
bindsym $mod+o mode "resize"

# i3 colors
# Would be interesting to use set_from_resource $var res fallback in the future.
# class                 border  backgr. text    indicator child_border
client.focused          #000000 #000000 #ffffff #2e9ef4   #000000
client.focused_inactive #000000 #000000 #ffffff #484e50   #000000
client.unfocused        #000000 #000000 #444444 #292d2e   #000000
client.urgent           #000000 #000000 #ffffff #900000   #000000
client.placeholder      #000000 #000000 #ffffff #000000   #000000

client.background       #ffffff

# set some windows floating by default.
no_focus   [window_role="pop_up"]
for_window [window_role="pop_up"]      floating enable
for_window [window_role="task_dialog"] floating enable
floating_maximum_size 0 x 0

# set windows borderless by default
default_border    none
hide_edge_borders both

# play around with discord
for_window [class="discord"] floating disable

bar {
    strip_workspace_numbers yes
    binding_mode_indicator  no
    id                      primary
    output                  LVDS1
    status_command          i3status --config ~/.config/i3status/primary
    font                    pango:DejaVu Sans Mono, FontAwesome 8.5
    mode                    hide
    modifier                none
    tray_padding            0
    separator_symbol        "‖"
}
bindsym $mod+Shift+P bar mode toggle primary
