#!/usr/bin/env bash

if [[ $(vim --version | grep +clientserver) = '' ]]; then
  echo Please compile vim with +clientserver option.
  exit 1
fi

if [[ $(vim --serverlist | grep JOURNAL) ]]; then
  vim --servername JOURNAL --remote-send "<C-\><C-N>:xall:qall!"
fi

[[ $(date +%-H) -lt 4 ]] && date="yesterday" || date="today"
date=$(date --date=$date +%Y/%m/%d)

mkdir -p "$HOME/saveuriendir/$date"
pushd "$HOME/saveuriendir/$date" > /dev/null

[[ $@ ]] && journal=$@ || journal="main"

journal="$HOME/saveuriendir/$date/${journal%%.md}.md"

vim --servername JOURNAL "$journal"

[[ -s "$journal" ]] || rm -f "$journal"
